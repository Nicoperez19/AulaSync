    <script>
        let horariosSeleccionados = [];
        let espacioActual = '';
        let modulosOcupados = [];

        // Cargar planificaciones existentes si estamos editando
        @if(isset($profesorColaborador))
            @foreach($profesorColaborador->planificaciones as $plan)
                horariosSeleccionados.push({
                    id_modulo: '{{ $plan->id_modulo }}',
                    id_espacio: '{{ $plan->id_espacio }}'
                });
            @endforeach
            espacioActual = '{{ $profesorColaborador->planificaciones->first()->id_espacio ?? '' }}';
            if (espacioActual) {
                document.getElementById('espacio_selector').value = espacioActual;
            }
        @endif

        // Selector de espacio
        document.getElementById('espacio_selector').addEventListener('change', function() {
            espacioActual = this.value;
            if (espacioActual) {
                cargarModulosOcupados();
            }
        });

        // Función para cargar módulos ocupados del espacio
        async function cargarModulosOcupados() {
            if (!espacioActual) return;

            try {
                const response = await fetch(`/api/profesores-colaboradores/horarios-ocupados?id_espacio=${espacioActual}`);
                const data = await response.json();
                
                if (data.success) {
                    modulosOcupados = data.ocupados.map(m => m.id_modulo);
                    actualizarGridHorarios();
                }
            } catch (error) {
                console.error('Error al cargar módulos ocupados:', error);
            }
        }

        // Click en celdas del horario
        document.querySelectorAll('.horario-cell').forEach(cell => {
            cell.addEventListener('click', function() {
                if (!espacioActual) {
                    alert('Por favor, selecciona un espacio primero');
                    return;
                }

                const idModulo = this.dataset.idModulo;
                const estaOcupado = modulosOcupados.includes(idModulo);

                if (estaOcupado) {
                    alert('Este módulo ya está ocupado en el espacio seleccionado');
                    return;
                }

                const index = horariosSeleccionados.findIndex(h => h.id_modulo === idModulo);
                
                if (index >= 0) {
                    // Deseleccionar
                    horariosSeleccionados.splice(index, 1);
                    this.classList.remove('bg-indigo-500', 'border-indigo-700', 'text-white');
                    this.classList.add('bg-green-100', 'border-green-500');
                } else {
                    // Seleccionar
                    horariosSeleccionados.push({
                        id_modulo: idModulo,
                        id_espacio: espacioActual
                    });
                    this.classList.remove('bg-green-100', 'border-green-500');
                    this.classList.add('bg-indigo-500', 'border-indigo-700', 'text-white');
                }

                actualizarListaSeleccionados();
            });
        });

        function actualizarGridHorarios() {
            document.querySelectorAll('.horario-cell').forEach(cell => {
                const idModulo = cell.dataset.idModulo;
                const estaSeleccionado = horariosSeleccionados.some(h => h.id_modulo === idModulo);
                const estaOcupado = modulosOcupados.includes(idModulo);

                // Reset
                cell.classList.remove('bg-indigo-500', 'border-indigo-700', 'text-white', 'bg-red-100', 'border-red-300', 'opacity-50', 'cursor-not-allowed', 'bg-green-100', 'border-green-500');
                cell.disabled = false;

                if (estaOcupado) {
                    cell.classList.add('bg-red-100', 'border-red-300', 'opacity-50', 'cursor-not-allowed');
                    cell.disabled = true;
                } else if (estaSeleccionado) {
                    cell.classList.add('bg-indigo-500', 'border-indigo-700', 'text-white');
                } else {
                    cell.classList.add('bg-green-100', 'border-green-500');
                }
            });
        }

        function actualizarListaSeleccionados() {
            const container = document.getElementById('planificaciones-container');
            const list = document.getElementById('seleccionados-list');

            container.innerHTML = '';
            list.innerHTML = '';

            if (horariosSeleccionados.length === 0) {
                list.innerHTML = '<span class="text-sm text-gray-400">Ningún horario seleccionado</span>';
                return;
            }

            horariosSeleccionados.forEach((horario, index) => {
                // Hidden inputs
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = `planificaciones[${index}][id_modulo]`;
                input.value = horario.id_modulo;
                container.appendChild(input);

                const inputEspacio = document.createElement('input');
                inputEspacio.type = 'hidden';
                inputEspacio.name = `planificaciones[${index}][id_espacio]`;
                inputEspacio.value = horario.id_espacio;
                container.appendChild(inputEspacio);

                // Badge visual
                const badge = document.createElement('span');
                badge.className = 'inline-flex items-center gap-2 px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-sm font-medium';
                badge.innerHTML = `
                    <i class="fa-solid fa-calendar-check"></i>
                    ${horario.id_modulo}
                    <button type="button" onclick="eliminarHorario('${horario.id_modulo}')" class="text-indigo-500 hover:text-indigo-700">
                        <i class="fa-solid fa-times"></i>
                    </button>
                `;
                list.appendChild(badge);
            });
        }

        function eliminarHorario(idModulo) {
            const index = horariosSeleccionados.findIndex(h => h.id_modulo === idModulo);
            if (index >= 0) {
                horariosSeleccionados.splice(index, 1);
                actualizarGridHorarios();
                actualizarListaSeleccionados();
            }
        }

        // Validación del formulario
        document.getElementById('formProfesorColaborador').addEventListener('submit', function(e) {
            if (horariosSeleccionados.length === 0) {
                e.preventDefault();
                alert('Debes seleccionar al menos un horario');
                return false;
            }

            if (!espacioActual) {
                e.preventDefault();
                alert('Debes seleccionar un espacio');
                return false;
            }
        });

        // Inicializar vista
        if (espacioActual) {
            cargarModulosOcupados();
        }
        actualizarListaSeleccionados();
        actualizarGridHorarios();
    </script>
